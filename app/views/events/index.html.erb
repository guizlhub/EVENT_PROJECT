<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>

<h1>Voici les évènements à venir</h1>
<h2> Tu peux en créer un en allant ici</h2>
<button type="button" class="btn btn-secondary btn-lg btn-block"><%= link_to "Créer son évènement", new_event_path %></button>
	<div class="row">
    <%@events.each do |event|%>
      <!-- event-->
      <div class="col-sm-2">
      	
      </div>
      <div class="col-sm-2">
			
		</div>
      <div class='col-sm-2 event-tab'>
        <div class="list-group" role='tablist'>
          <a href="<%= event_path(event.id)%>" class="list-group-item list-group-item-action not_like" role='tab'>
            <div class="d-flex w-80 justify-content-between">
              <h5 class="mb-1 text-left"><%= event.title%></h5>
            </div>
            <div class="d-flex w-80 justify-content-between">
              <small class='mb-1'><%= event.start_date%></small>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>

